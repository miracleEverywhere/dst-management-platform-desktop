  },
  "resolutions": {
    "postcss": "^8",
    "stylelint-order": "6.0.3",
    "@types/video.js": "^7"
  },
  "overrides": {
    "postcss": "^8",
    "stylelint-order": "6.0.3",
    "@types/video.js": "^7"
  },
  "build": {
    "productName": "饥荒管理平台",
    "appId": "Miracle",
    "copyright": "Miracle © 2026",
    "compression": "maximum",
    "asar": true,
    "directories": {
      "output": "release/"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "饥荒管理平台",
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "icon": "./public/favicon.ico",
      "artifactName": "DMP-v${version}-${platform}-amd64.${ext}",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "mac": {
      "icon": "./public/icon.icns",
      "artifactName": "DMP-v${version}-${platform}-arm64.${ext}",
      "target": "dmg"
    },
    "linux": {
      "icon": "./public/icon.png",
      "artifactName": "DMP-v${version}-${platform}-amd64.${ext}",
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
